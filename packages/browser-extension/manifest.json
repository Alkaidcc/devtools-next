{
  "name": "Vue.js DevTools",
  "version": "0.0.1",
  "version_name": "0.0.1",
  "description": "DevTools browser extension for Vue.js",
  "manifest_version": 3,
  "permissions": [
    "scripting",
    "webNavigation",
    "storage"
  ],
  "icons": {
    "128": "icons/128.png"
  },
  "web_accessible_resources": [{
    "resources": ["dist/*", "client/*", "overlay/*", "panel/*"],
    "matches": ["<all_urls>"]
  }],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "devtools_page": "pages/devtools-background.html",
  "content_scripts": [
    {
      "world": "MAIN",
      "js": ["dist/prepare.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["dist/devtools-overlay.js"],
      "run_at": "document_end"
    }
  ]
}
